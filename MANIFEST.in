# MANIFEST.in for Hot Durham Air Quality Monitoring

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
recursive-include docs *.md *.rst *.txt

# Include configuration files
recursive-include config *.json *.yml *.yaml
recursive-include config/templates *.json *.yml *.yaml

# Include test data and fixtures
recursive-include tests *.py *.json *.csv *.txt
recursive-include tests/test_fixtures *.json *.csv

# Include package data
recursive-include src *.py *.json *.yml *.yaml *.txt

# Exclude development and build files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude .DS_Store
exclude Thumbs.db
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .git*
recursive-exclude * .coverage*
recursive-exclude * .pytest_cache

# Exclude credentials and sensitive data
exclude creds/*
exclude .env
exclude *.log
exclude logs/*
exclude backup/*
exclude temp/*
exclude raw_pulls/*
exclude processed/*
